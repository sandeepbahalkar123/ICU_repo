<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4"
        android:orientation="horizontal">
        <com.icuapp.customesViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTimeDate"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            app:customFont="@string/roboto_bold"
            android:textColor="@color/parrot_green_color"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sp16"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="HR"
                    android:textColor="@color/parrot_green_color"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_regular" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.icuapp.customesViews.CustomTextView
                            android:id="@+id/hr150"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="150"
                            android:textColor="@color/parrot_green_color"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold"
                            app:customFont="@string/roboto_regular" />
                        <com.icuapp.customesViews.CustomTextView
                            android:id="@+id/hr80"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="80"
                            android:textColor="@color/parrot_green_color"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold"
                            app:customFont="@string/roboto_regular" />
                    </LinearLayout>
                    <com.icuapp.customesViews.CustomTextView
                        android:id="@+id/countPulse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp10"
                        android:textColor="@color/parrot_green_color"
                        android:textSize="@dimen/sp30"
                        app:customFont="@string/roboto_bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/pleth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="SpO2"
                    android:textColor="@color/parrot_green_color"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countPleth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp18"
                    android:textColor="@color/parrot_green_color"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/resp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Resp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countResp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp18"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/cvp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="CVP"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countCvp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp18"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/icp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="ICP"
                    android:textColor="@color/rr_yellow_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countIcp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp18"
                    android:textColor="@color/rr_yellow_color"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/pap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="PAP"
                    android:textColor="@color/Red"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countPap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp18"
                    android:textColor="@color/Red"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/systolicPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="SysPressure"
                    android:textColor="@color/rr_yellow_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countSystolicPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp18"
                    android:textColor="@color/rr_yellow_color"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="T1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:orientation="vertical">

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="T2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />

                <com.icuapp.customesViews.CustomTextView
                    android:id="@+id/countt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp8"

                    android:textColor="@color/white"
                    android:textSize="@dimen/sp30"
                    app:customFont="@string/roboto_bold" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>
