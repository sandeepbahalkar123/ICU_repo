<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ECGGraphsList"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/vitalHistoryListLinearLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/vitalListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:layout_weight="1.5"/>

        <Button
            android:id="@+id/buttonOkVital"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="OK"
            android:background="@color/loginHeader"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">
        </Button>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/vital_history_detail"/>
    </LinearLayout>

</LinearLayout>
