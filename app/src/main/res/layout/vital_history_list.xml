<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <RelativeLayout
        android:id="@+id/vitalHistoryListLinearLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/vitalListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonOkVital" />

        <Button
            android:id="@+id/buttonOkVital"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="OK"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@color/loginHeader"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/dp10">
        </Button>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/vital_history_detail"/>
    </LinearLayout>

</LinearLayout>
